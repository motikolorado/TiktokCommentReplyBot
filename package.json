{
  "name": "TikTokRelpyBot",
  "productName": "TiktokReplyBot",
  "version": "1.0.1",
  "description": "A bot that replies to comments on Tiktok posts.",
  "main": "apps/shell/dist/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "task-runner:bundle-mac": "npx pkg apps/daemon/task-runner/dist/index.js --targets node18-macos-arm64 --output apps/bin/task-runner-mac --public",
    "task-runner:bundle": "npx pkg apps/daemon/task-runner/dist/index.js --targets node18-win-x64 --output apps/bin/task-runner.exe --public",
    "make-mac:all": "npm run task-runner:bundle-mac && electron-forge make --platform=darwin --arch=arm64",
    "make:all": "npm run task-runner:bundle && electron-forge make --platform=win32 --arch=x64"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-webpack": "^7.8.3",
    "@types/bezier-js": "^4.1.3",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "electron": "37.2.4",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "vite": "^5.4.19",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@types/node": "^24.1.0",
    "bezier-js": "^6.1.4",
    "electron-auto-launch": "5.0.7",
    "electron-squirrel-startup": "^1.0.1",
    "knex": "^3.1.0",
    "node-fetch": "^3.3.2",
    "puppeteer": "^24.10.2",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0"
  }
}
