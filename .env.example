# TikTok Comment Reply Bot Environment Configuration
# Copy this file to .env and update the values as needed

# Application Settings
NODE_ENV=development                    # Environment: development, production, test
APP_NAME=TiktokReplyBot                # Application name
APP_VERSION=1.0.1                      # Application version

# Database Configuration
DB_TYPE=sqlite3                        # Database type: sqlite3, postgresql, mysql
DB_PATH=~/.TiktokReplyBot/data/app.sqlite  # Database file path

# Logging Configuration
LOG_LEVEL=info                         # Log level: debug, info, warn, error
LOG_DIR=~/.TiktokReplyBot/logs         # Directory for log files
LOG_MAX_SIZE=5242880                   # Max log file size in bytes (5MB)
LOG_MAX_FILES=5                        # Maximum number of log files to keep

# Bot Configuration
BOT_STATUS=stopped                     # Bot status: stopped, running, paused
TEST_MODE=true                         # Enable test mode (replies won't be posted)
RUN_IN_BACKGROUND=false                 # Run bot in background mode
POST_PER_DAY=10                        # Maximum posts per day
MAX_COMMENTS=50                        # Maximum comments to reply to per video
DELAY_BETWEEN_REPLY=10                 # Delay between replies in seconds
POST_INTERVAL=60                       # Interval between posts in seconds
MAX_AUTO_FIND_VIDEOS=10                # Maximum videos to auto-find

# Browser Configuration
BROWSER_HEADLESS=false                 # Run browser in headless mode
BROWSER_TIMEOUT=30000                  # Browser timeout in milliseconds
BROWSER_WAIT_FOR_SELECTOR=30000        # Wait for selector timeout in milliseconds

# TikTok Settings
TIKTOK_BASE_URL=https://www.tiktok.com  # Base TikTok URL
TIKTOK_TIMEOUT=60000                   # TikTok page load timeout in milliseconds
TIKTOT_RETRY_DELAY=5000                # Delay between retries in milliseconds
TIKTOK_MAX_RETRIES=3                   # Maximum number of retry attempts

# Security Settings
ENABLE_PROXY=false                     # Enable proxy usage
PROXY_URL=                             # Proxy URL (e.g., http://proxy.example.com)
PROXY_PORT=                            # Proxy port
PROXY_USERNAME=                        # Proxy username (if auth required)
PROXY_PASSWORD=                        # Proxy password (if auth required)

# Performance Settings
MAX_CONCURRENT_BOTS=1                  # Maximum number of concurrent bot instances
BOT_SESSION_DURATION=3600               # Bot session duration in seconds (1 hour)
REQUEST_DELAY_MS=1000                  # Delay between requests in milliseconds

# Development Settings
DEV_TOOLS=false                        # Enable browser developer tools
HOT_RELOAD=false                       # Enable hot reload (for development)
DEBUG_MODE=false                       # Enable debug mode logging

# File Paths
DATA_DIR=~/.TiktokReplyBot             # Main data directory
PROFILE_DIR=~/.TiktokReplyBot/profiles # Browser profile directory
TEMP_DIR=~/.TiktokReplyBot/temp        # Temporary files directory

# API Keys (if needed in future)
TIKTOK_API_KEY=                        # TikTok API key (if using API features)
TIKTOK_API_SECRET=                     # TikTok API secret (if using API features)